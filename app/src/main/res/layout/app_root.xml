<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sconnecting.userapp.AppRootActivity"
    android:orientation="horizontal"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lauchingimage1242x2208"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:layout_margin="0dp"
        >
    </ImageView>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="130dp"
        android:layout_height="190dp"
        android:background="@drawable/centerlogo"
        android:layout_marginTop="144dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter">
    </ImageView>


    <TextView
        android:text="Kết nối không thành công. Vui lòng kiểm tra lại."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblStatus"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:visibility="gone"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="THỬ LẠI"
        android:background="@drawable/button_style1_blue"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:id="@+id/btnTryAgain"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:visibility="gone"/>

</RelativeLayout>
