<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:animateLayoutChanges="true"
android:padding="0dp"
android:orientation="vertical">



    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:inputType="textNoSuggestions"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:id="@+id/btnMateStatus"/>

    <TextView
        android:id="@+id/lblDescMateStatus"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:maxLines="2"
        android:gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:textColor="@color/light_gray"
        android:textSize="10sp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:text="Thành viên ban đầu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:inputType="textNoSuggestions"
            android:layout_weight="0.6"/>


        <com.sconnecting.userapp.base.ui.NTSpinner
            android:layout_width="130dp"
            android:layout_height="27dp"
            android:layout_weight="0.0"
            android:text="Thành viên"
            android:textSize="13dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            app:met_floatingLabel="none"
            android:textAlignment="center"
            android:id="@+id/cbMemberQty"
            android:background="@drawable/textedit_blue"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:text="Khởi hành"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:inputType="textNoSuggestions"/>

        <TextView
            android:text="Ngày khởi hành"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:inputType="textNoSuggestions"
            android:id="@+id/lblPickupDate"
            android:textAlignment="viewStart"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:text="Giờ khởi hành"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:inputType="textNoSuggestions"
            android:id="@+id/lblPickupTime"
            android:textAlignment="viewEnd"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:text="Phương tiện"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:inputType="textNoSuggestions"
            android:layout_weight="0.7"/>


        <TextView
            android:text="@string/vehicletype"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:inputType="textNoSuggestions"
            android:id="@+id/lblVehicleType"
            android:textAlignment="viewEnd"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:text="Chất lượng"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:inputType="textNoSuggestions"
            android:layout_weight="0.7"/>


        <TextView
            android:text="@string/qualityservice"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:inputType="textNoSuggestions"
            android:id="@+id/lblQualityType"
            android:textAlignment="viewEnd"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:text="Thành viên hiện tại"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:inputType="textNoSuggestions"
            android:layout_weight="0.5"/>


        <TextView
            android:text="3 người"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:inputType="textNoSuggestions"
            android:layout_weight="0.5"
            android:id="@+id/lblMateTotalMembers"
            android:textAlignment="viewEnd"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:text="Còn thiếu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:inputType="textNoSuggestions"
            android:layout_weight="0.4"/>


        <TextView
            android:text="0 người"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:inputType="textNoSuggestions"
            android:layout_weight="0.6"
            android:id="@+id/lblMateRemainMembers"
            android:textAlignment="viewEnd"/>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/line"
        android:background="#BFBFBF" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:text="Cước ban đầu "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:inputType="textNoSuggestions"
            android:layout_weight="0.5"/>


        <TextView
            android:text="250.000 đ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:inputType="textNoSuggestions"
            android:layout_weight="0.5"
            android:textAlignment="viewEnd"
            android:id="@+id/lblOrderPrice"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/pnlHostOrderPrice">

        <TextView
            android:text="Cước cả nhóm "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:inputType="textNoSuggestions"
            android:layout_weight="0.5"/>


        <TextView
            android:text="330.000 đ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:inputType="textNoSuggestions"
            android:layout_weight="0.5"
            android:textAlignment="viewEnd"
            android:id="@+id/lblHostOrderPrice"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/pnlMateOrderPrice">

        <TextView
            android:text="Cước của bạn "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:inputType="textNoSuggestions"
            android:layout_weight="0.5"/>


        <TextView
            android:text="130.000 đ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:inputType="textNoSuggestions"
            android:layout_weight="0.5"
            android:textAlignment="viewEnd"
            android:id="@+id/lblMateOrderPrice"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/pnlBenifitRatio">

        <TextView
            android:text="Tiết kiệm được "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:inputType="textNoSuggestions"
            android:layout_weight="0.5"/>


        <TextView
            android:text="45%"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:inputType="textNoSuggestions"
            android:layout_weight="0.5"
            android:textAlignment="viewEnd"
            android:id="@+id/lblBenifitRatio"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/pnlDistanceIncreaseRatio">

        <TextView
            android:text="Quãng đường tăng thêm "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:inputType="textNoSuggestions"
            android:layout_weight="0.5"/>


        <TextView
            android:text="15%"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:inputType="textNoSuggestions"
            android:layout_weight="0.5"
            android:textAlignment="viewEnd"
            android:id="@+id/lblDistanceIncreaseRatio"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:padding="5dp"
        android:orientation="vertical"
        android:id="@+id/openHostArea">

        <Button
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:background="@drawable/button_style1_blue"
            android:id="@+id/btnOpenHostOrder"
            android:textSize="10sp"
            tools:text="   CHI TIẾT   "
            android:textColor="#FFFFFF"
            android:elevation="0dp"
            android:textAllCaps="false"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/button_style1_white"
            android:id="@+id/btnReadyHostOrder"
            android:textSize="14sp"
            tools:text="CHỐT NHÓM"
            android:textColor="#617D8A"
            android:elevation="0dp"
            android:textAllCaps="false"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/lblDescReadyHostOrder"
            android:text="Sau khi Chốt Nhóm, bạn có thể tiến hành đặt xe ngay \n hoặc đặt trước để tài xế quét thấy và tham gia đấu thầu."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxLines="2"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textColor="@color/light_gray"
            android:textSize="10sp"/>



    </LinearLayout>

</LinearLayout>