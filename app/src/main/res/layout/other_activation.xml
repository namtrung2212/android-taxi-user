<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayout"
    tools:context=".ui.activation.ActivationScreen"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">


    <TextView
        android:text="XÁC NHẬN TÀI KHOẢN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblTitle"
        android:textSize="18sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:textColor="#0F88E3" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="hint"
        android:hint="Họ và tên"
        android:ems="10"
        android:id="@+id/txtUserName"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/lblTitle"
        android:textSize="17sp"
        android:textAlignment="center"
        android:foregroundTint="@color/black"
        android:textColorLink="?android:attr/textColorTertiary" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txtPhoneNo"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtUserName"
        android:text=""
        android:hint="Số điện thoại"
        android:textColorLink="?android:attr/textColorTertiary"
        android:textAlignment="center"
        android:inputType="number"
        android:textSize="24sp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Nhập mã xác nhận"
        android:ems="10"
        android:id="@+id/txtActivationCode"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtPhoneNo"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginLeft="16dp"
        android:textColorLink="?android:attr/textColorTertiary"
        android:textAlignment="center"
        android:inputType="number"
        android:textSize="24sp" />


    <TextView
        android:text="Mã xác nhận sẽ được gửi đến số điện thoại của bạn."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblStatus"
        android:textSize="12sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/txtActivationCode"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginRight="16dp" />


    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/button_style1_blue"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:text="GỬI MÃ XÁC NHẬN"
        android:id="@+id/btnGetCode"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/lblStatus"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="HOÀN TẤT"
        android:id="@+id/btnDone"
        android:background="@drawable/button_style1_blue"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/lblStatus"
        android:layout_marginTop="20dp"
        android:visibility="gone" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="XÁC NHẬN"
        android:id="@+id/btnCommitCode"
        android:background="@drawable/button_style1_orrange"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/lblStatus"
        android:layout_marginTop="20dp"
        android:visibility="gone" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="LÀM LẠI"
        android:id="@+id/btnCancel"
        android:background="@drawable/button_style1_gray"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/lblStatus"
        android:layout_marginTop="20dp"
        android:visibility="gone" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="160dp"
        app:layout_constraintGuide_Percent="50" />



</android.support.constraint.ConstraintLayout>