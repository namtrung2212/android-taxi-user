

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraintLayout"
        tools:context="com.sconnecting.userapp.ui.taxi.order.creation.ChooseLocationView">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/location3"
            android:id="@+id/centerLocation"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="16dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background= "@null"
            app:srcCompat="@drawable/pickuphere"
            android:id="@+id/btnPickupHere"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="110dp"
            android:layout_marginStart="110dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/centerLocation" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background= "@null"
            app:srcCompat="@drawable/drophere"
            android:id="@+id/btnDropHere"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="110dp"
            android:layout_marginStart="110dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/centerLocation" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="122dp"
            app:srcCompat="@drawable/panel_gray"
            android:id="@+id/pnlOrderArea"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="2dp"/>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pickupicon"
            android:id="@+id/btnPickupIcon"
            android:background= "@null"
            app:layout_constraintLeft_toLeftOf="@+id/pnlOrderArea"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/pnlOrderArea"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="TextView TextView TextView Text "
            android:layout_height="wrap_content"
            android:id="@+id/lblPickupLocation"
            android:textSize="12sp"
            android:inputType="textNoSuggestions"
            app:layout_constraintLeft_toRightOf="@+id/btnPickupIcon"
            app:layout_constraintCenterY_toCenterY="@+id/btnPickupIcon"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="35dp"
            android:layout_marginEnd="35dp"
            android:layout_width="0dp"
            android:ellipsize="end"
            tools:layout_editor_absoluteY="508dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background= "@null"
            app:srcCompat="@drawable/cancel_gray"
            android:id="@+id/btnPickupCancel"
            app:layout_constraintCenterY_toCenterY="@+id/btnPickupIcon"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            tools:layout_editor_absoluteY="506dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/line"
            android:id="@+id/line1"
            app:layout_constraintTop_toBottomOf="@+id/lblPickupLocation"
            app:layout_constraintLeft_toLeftOf="@+id/lblPickupLocation"
            app:layout_constraintRight_toRightOf="@+id/lblPickupLocation"
            android:layout_marginTop="3dp"
            android:background="#BFBFBF"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dropicon"
            android:id="@+id/btnDropIcon"
            android:background= "@null"
            app:layout_constraintLeft_toLeftOf="@+id/pnlOrderArea"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/btnPickupIcon"
            android:layout_marginTop="4dp" />

        <TextView
            android:text="TextView TextView TextView "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblDropLocation"
            android:textSize="12sp"
            android:inputType="textNoSuggestions"
            app:layout_constraintLeft_toRightOf="@+id/btnDropIcon"
            app:layout_constraintCenterY_toCenterY="@+id/btnDropIcon"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="35dp"
            android:layout_marginEnd="35dp"
            tools:layout_editor_absoluteY="544dp" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background= "@null"
            app:srcCompat="@drawable/cancel_gray"
            android:id="@+id/btnDropCancel"
            app:layout_constraintCenterY_toCenterY="@+id/btnDropIcon"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            tools:layout_editor_absoluteY="542dp" />


        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/line"
            android:id="@+id/line2"
            app:layout_constraintTop_toBottomOf="@+id/lblDropLocation"
            app:layout_constraintLeft_toLeftOf="@+id/lblDropLocation"
            app:layout_constraintRight_toRightOf="@+id/lblDropLocation"
            android:layout_marginTop="3dp"
            android:background="#BFBFBF"/>



        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="34dp"
            android:layout_height="32dp"
            android:text="{fa-car}"
            android:textSize="14sp"
            android:textColor="#38A5D8"
            android:id="@+id/btnPathStatisticIcon"
            app:layout_constraintCenterX_toCenterX="@+id/btnDropIcon"
            app:layout_constraintTop_toBottomOf="@+id/btnDropIcon"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical|center_horizontal"
            tools:layout_editor_absoluteX="10dp" />


        <TextView
            android:text="TextView TextView TextView "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblPathStatistic"
            android:inputType="textNoSuggestions"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/btnPathStatisticIcon"
            app:layout_constraintCenterY_toCenterY="@+id/btnPathStatisticIcon"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="35dp"
            android:layout_marginEnd="35dp"
            tools:layout_editor_absoluteY="580dp" />


        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/line"
            android:id="@+id/line3"
            app:layout_constraintTop_toBottomOf="@+id/lblPathStatistic"
            app:layout_constraintLeft_toLeftOf="@+id/lblPathStatistic"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="3dp"
            android:layout_marginRight="35dp"
            android:background="#BFBFBF"
            android:layout_marginEnd="35dp" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="1dp"
            android:padding="2dp"
            android:paddingLeft="4dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingRight="4dp">


            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_style1_orrange"
                android:id="@+id/btnCreateOrder"
                android:textSize="14sp"
                tools:text="TẠO HÀNH TRÌNH"
                android:textColor="@android:color/white"
                android:elevation="0dp"
                android:textAllCaps="false"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:padding="0dp"/>


        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

