<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:animateLayoutChanges="true"
android:padding="5dp"
android:orientation="vertical"
android:layout_marginTop="10dp">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:padding="0dp"
    android:orientation="horizontal">

    <TextView
        android:text="Cần thêm ít nhất"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:inputType="textNoSuggestions"
        android:layout_weight="0.6"/>


    <com.sconnecting.userapp.base.ui.NTSpinner
        android:layout_width="130dp"
        android:layout_height="27dp"
        android:layout_weight="0.0"
        android:text="Số lượng"
        android:textSize="13dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:met_floatingLabel="none"
        android:textAlignment="center"
        android:id="@+id/cbMinSubMemberQty"
        android:background="@drawable/textedit_blue"/>
</LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:padding="0dp"
    android:orientation="horizontal"
    android:layout_marginTop="10dp">

    <TextView
        android:text="Cần thêm tối đa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:inputType="textNoSuggestions"
        android:layout_weight="0.6"/>


    <com.sconnecting.userapp.base.ui.NTSpinner
        android:layout_width="130dp"
        android:layout_height="27dp"
        android:layout_weight="0.0"
        android:text="Số lượng"
        android:textSize="13dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:met_floatingLabel="none"
        android:textAlignment="center"
        android:id="@+id/cbMaxSubMemberQty"
        android:background="@drawable/textedit_blue"/>
</LinearLayout>

<Button
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="@drawable/button_style1_white"
    android:id="@+id/btnCreateHostOrder"
    android:textSize="14sp"
    tools:text="TẠO NHÓM MỚI"
    android:textColor="#617D8A"
    android:elevation="0dp"
    android:textAllCaps="false"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp"
    android:layout_marginTop="10dp"/>


<TextView
    android:text="Bạn sẽ là trưởng nhóm có trách nhiệm đặt xe, thu tiền của thành viên và thanh toán cho tài xế."
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:lines="3"
    android:maxLines="3"
    android:gravity="center_horizontal"
    android:layout_marginTop="5dp"
    android:textColor="@color/light_gray"
    android:textSize="11sp"/>

</LinearLayout>