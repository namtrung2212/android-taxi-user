<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_margin="0dp"
android:padding="0dp"
android:id="@+id/constraintLayout"
tools:context="com.sconnecting.userapp.ui.taxi.order.creation.custom.LateConfigView">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/pnlDateTimeArea"
        android:animateLayoutChanges="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="2dp"
        android:padding="0dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp">


        <EditText
            android:id="@+id/pickupDate"
            android:layout_width="200dp"
            android:layout_height="27dp"
            android:layout_weight="0.5"
            android:hint="Ngày khởi hành"
            android:textSize="13dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="20dp"
            android:paddingBottom="0dp"
            android:visibility="gone"/>

        <TextView
            android:text="Ngày khởi hành"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:inputType="textNoSuggestions"
            android:layout_weight="0.5"
            android:id="@+id/lblPickupDate"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="20dp"
            android:paddingBottom="0dp"/>

        <EditText
            android:id="@+id/pickupTime"
            android:layout_width="200dp"
            android:layout_height="27dp"
            android:layout_weight="0.5"
            android:hint="Giờ khởi hành"
            android:textSize="13dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="20dp"
            android:paddingBottom="0dp"
            android:visibility="gone"/>

        <TextView
            android:text="Giờ khởi hành"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:inputType="textNoSuggestions"
            android:layout_weight="0.5"
            android:id="@+id/lblPickupTime"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="20dp"
            android:paddingBottom="0dp"/>

    </LinearLayout>



    <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/pnlFilterArea"
    android:animateLayoutChanges="true"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/pnlDateTimeArea"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_marginTop="10dp"
        android:padding="0dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp">

    <com.sconnecting.userapp.base.ui.NTSpinner
        android:layout_width="200dp"
        android:layout_height="27dp"
        android:layout_weight="0.5"
        android:text="Phương tiện"
        android:textSize="13dp"
        android:textColor="@color/dark_gray"
        android:textColorHint="@color/dark_gray"
        app:met_floatingLabel="none"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="20dp"
        android:paddingBottom="0dp"
        android:id="@+id/cbVehicleType"/>

    <com.sconnecting.userapp.base.ui.NTSpinner
        android:layout_width="200dp"
        android:layout_height="27dp"
        android:layout_weight="0.5"
        android:text="Phổ thông"
        android:textSize="13dp"
        android:textColor="@color/dark_gray"
        android:textColorHint="@color/dark_gray"
        app:met_floatingLabel="none"
        android:textAlignment="center"
        android:id="@+id/cbQuality"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="20dp"
        android:paddingBottom="0dp"/>

</LinearLayout>





    <FrameLayout
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pnlFilterArea"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:clickable="true"
        >

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refreshControl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp">


            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/driverTable"
                android:background="@color/background"
                android:layout_margin="0dp"
                android:padding="0dp"/>

        </android.support.v4.widget.SwipeRefreshLayout>


        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/emptyRefreshControl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_margin="0dp"
            android:padding="0dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:background="@color/background"
                android:layout_margin="0dp"
                android:padding="0dp">

                <TextView
                    android:id="@+id/emptyView"
                    android:text="Chưa có tài xế nào đăng ký phục.\n Vui lòng chờ."
                    android:maxLines="2"
                    android:lines="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/dark_gray"/>

            </ScrollView>

        </android.support.v4.widget.SwipeRefreshLayout>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>


